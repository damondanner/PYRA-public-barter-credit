# PYRA Barter Credit API Configuration

# CoinGecko API Key (optional, but recommended for higher rate limits)
# Get your free API key at: https://www.coingecko.com/en/api
COINGECKO_API_KEY=your_coingecko_api_key_here

# Server Configuration
PORT=5000
UPDATE_INTERVAL=300  # Update interval in seconds (5 minutes = 300)

# Base URL for embed scripts (used in generated JavaScript)
BASE_URL=https://your-deployed-domain.com

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Cache Configuration
ENABLE_CACHING=true
CACHE_DURATION=300  # Cache duration in seconds

# Development Settings
DEBUG=false
TESTING=false

# Production Environment Variables (for deployment)
# These are typically set by your hosting provider

# Heroku
# HEROKU_APP_NAME=your-pyra-credit-api

# Railway
# RAILWAY_ENVIRONMENT=production

# Vercel
# VERCEL_URL=your-app.vercel.app

# Docker
# DOCKER_ENV=production

# Security Settings (for production)
SECRET_KEY=your_secret_key_here_change_in_production
CORS_ORIGINS=*  # In production, specify your domains: https://yourdomain.com,https://www.yourdomain.com

# Database (if you add database caching later)
# DATABASE_URL=postgresql://user:password@localhost/pyra_credit

# Monitoring (if you add monitoring)
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_key_here

# Backup/Storage (if you add data persistence)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# S3_BUCKET_NAME=pyra-credit-backups
